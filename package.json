{
  "name": "@nodestrap/sass-class-template",
  "version": "3.0.3",
  "description": "A sass utility for making sass module look like oop programming style.",
  "dependencies": {
    "@nodestrap/sass-selector": "^2.0.3",
    "@nodestrap/sass-string": "^2.0.7"
  },
  "devDependencies": {
    "tilde-sass": "^1.0.2"
  },
  "scripts": {
    "test": "tilde-sass --file test/*.scss --outFile test/ --mergeSelectors",
    "test-watch": "tilde-sass --file test/*.scss --outFile test/ --mergeSelectors --watch",
    "deploy": "tilde-sass --file src/*.scss --outFile dist/ --mergeSelectors --outputStyle compressed",
    "deploy-watch": "tilde-sass --file src/*.scss --outFile dist/ --mergeSelectors --outputStyle compressed --watch"
  },
  "cssnano": {
    "preset": [
      "default",
      {
        "calc": false
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodestrap/sass-class-template.git"
  },
  "keywords": [
    "sass",
    "utility",
    "oop",
    "class"
  ],
  "author": "nodestrap, heymarco",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nodestrap/sass-class-template/issues"
  },
  "homepage": "https://github.com/nodestrap/sass-class-template#readme"
}
